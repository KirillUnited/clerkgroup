{% import "./button.njk" as Button %}
<section
    class="hero"
>
    <div class="container">
        <div class="hero__inner">
            <div class="hero__content">
                <div class="flex flex-col gap-4">
                    <h1 class="hero__title text-white">
                        Monitor your business on real-time dashboard
                    </h1>
                    <p class="hero__description">
                        Lorem ipsum dolor sit amet, consectetur adipiscing elit.
                        Elementum nisi aliquet volutpat pellentesque volutpat
                        est. Sapien in etiam vitae nibh nunc mattis imperdiet
                        sed nullam.
                    </p>
                </div>
                {{ Button.Button("Try for free", className="hero__button") }}
            </div>
            <div class="hero__image">
                <picture>
                    <source
                        srcset="../assets/images/bg.png"
                        media="(min-width: 1024px)"
                    />
                    <img
                        loading="lazy"
                        decoding="async"
                        width="873"
                        height="554"
                        src="../assets/images/bg-mobile.png"
                        alt="Monitor your business on real-time dashboard"
                    />
                </picture>
            </div>
        </div>
    </div>
</section>
