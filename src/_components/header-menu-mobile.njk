{% import "./header-menu.njk" as headerMenu %}
{% import "./button.njk" as
Button %}
<div data-mobile-menu="modal" class="header-menu-mobile">
    <div class="container">
        <div class="header__inner">
            {% include "./html/logo.html" %}
            <button data-mobile-menu="close" type="button" class="header-menu-button grid">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <rect x="2.4541" y="19.4247" width="24" height="3" transform="rotate(-45 2.4541 19.4247)" fill="#8794BA"/>
                    <rect x="4.5752" y="2.4541" width="24" height="3" transform="rotate(45 4.5752 2.4541)" fill="#8794BA"/>
                </svg>
            </button>
        </div>
    </div>
    <div class="container">
        <div class="header-menu-mobile__inner">
            {{ headerMenu.headerMenu([
                        "Products",
                        "Features",
                        "Registration",
                        "Pricing"
                    ]) }}
            {{ Button.Button("Sign UP", "button-secondary") }}
        </div>
    </div>
</div>